<div class="width90 height100">
    <h1 class="subtitle">番り輪の演技構成を組む</h1>

    <div class="form-box">
        <%= form_for(@ring, :url => { controller:'rings', action:'create'}) do |f| %>
            <%= f.collection_select :first, @favorite_rings.all, :id, :name, {prompt: "１番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            <%= f.collection_select :second, @favorite_rings.all, :id, :name, {prompt: "2番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            <%= f.collection_select :third, @favorite_rings.all, :id, :name, {prompt: "3番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            <%= f.collection_select :fourth, @favorite_rings.all, :id, :name, {prompt: "4番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            <%= f.collection_select :fifth, @favorite_rings.all, :id, :name, {prompt: "5番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            <%= f.collection_select :sixth, @favorite_rings.all, :id, :name, {prompt: "6番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            <%= f.collection_select :seventh, @favorite_rings.all, :id, :name, {prompt: "7番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            <%= f.collection_select :eighth, @favorite_rings.all, :id, :name, {prompt: "8番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            <%= f.collection_select :ninth, @favorite_rings.all, :id, :name, {prompt: "9番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            <%= f.collection_select :tenth, @favorite_rings.all, :id, :name, {prompt: "１0番目の技をお気に入りリストから選ぶ"}, {class: "event-field"} %>
            
            <br><br>
            <%= f.check_box :handstand, {}, 1, 0 %>
            <%= f.label(:handstand, "演技構成に振動倒立系の技が入っている")  %>
            <br><br>
            <%= f.submit "送信", class: "btn" %>
            <br><br>
        <% end %>
    </div>
</div>