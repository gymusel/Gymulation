<div class="front-devise">
  <i class="fab fa-battle-net fa-3x"></i>
  <h2 class="subtitle">ユーザー情報を編集する</h2>

  <div class="login">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :ユーザー画像 %><br />
        <%= f.label :image do %>
          <%= f.file_field :image, class: "image", autocomplete: "image" %>
          <i class="fas fa-image fa-3x"></i>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :name, autocomplete: "name", class: "form", placeholder: "ユーザー名を入力" %>
      </div>

      <div class="field">
        <%= f.label :自己紹介 %><br />
        <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: "form", placeholder: "自己紹介を入力" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :新しいパスワード %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form", placeholder: "パスワードを変更しない場合は空欄のままにしてください"  %>
      </div>

      <div class="field">
        <%= f.label :新しいパスワード（確認） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form", placeholder: "パスワードを変更しない場合は空欄のままにしてください" %>
      </div>

      <div class="field">
        <%= f.label :現在使用しているパスワード %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form", placeholder: "変更を適用するには現在使用しているパスワードを入力" %>
      </div>

      <div class="actions">
        <%= f.submit "更新する", class: "button" %>
      </div>
    <% end %>

    <div class="break-account">
      <h2 class="subtitle">アカウントを削除したいときは</h2>
      <%= link_to registration_path(resource_name), class: "break-button", data: { confirm: "本当によろしいですか？" }, method: :delete do %>
        <p><i class="fas fa-trash-alt"></i> アカウントを削除</p>
      <% end %>
    </div>

    

    <div class="back-to-previous">
      <%= link_to :back do %>
        <h3><i class="fas fa-arrow-alt-circle-left"></i> 編集をやめる</h3>
      <% end %>
    </div>
  </div>
</div>
